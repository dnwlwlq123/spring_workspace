package user.service;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import user.bean.UserDTO;
import user.bean.UserPaging;
import user.dao.UserDAO;

@Service
public class UserServiceImpl implements UserService {
	@Autowired
	private UserDAO userDAO;
	@Override
	public String isExistId(String id) {
		UserDTO userDTO = userDAO.isExistId(id);
		
		if(userDTO == null)
			return "non_exist";
		else
			return "exist";
	}
	@Override
	public void write(UserDTO userDTO) {
		userDAO.write(userDTO);
	}
	@Override
	public List<UserDTO> getUserList(String pg) {
		//한페이지당 3개씩
		 int pageNumber = Integer.parseInt(pg); // 1을 빼줍니다.
	        // 음수인 경우 0으로 설정합니다.
	        
	        Pageable pageable = PageRequest.of(pageNumber, 3);
	        Page<UserDTO> userPage = userDAO.findAll(pageable);
	        
	        return userPage.getContent();
		//List<UserDTO> list = userDAO.getUserList(pg);
		// JSON 형식으로 변환해서 보내야함
		
	}
	
}
