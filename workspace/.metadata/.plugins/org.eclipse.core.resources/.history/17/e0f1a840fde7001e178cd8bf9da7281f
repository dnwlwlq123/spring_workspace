$(function(){
	//id에 해당하는 데이터 가져오기
	$.ajax({
		type: 'post',
		url: '/Chapter06_Web/user/getUser',
		data: 'id='+$('#id').val(),
		dataType: 'json',
		success: function(data){
			console.log(JSON.stringify(data));
			
			$('#name').val(data.name);
			$('#pwd').val(data.pwd);
		},
		error: function(err){
			console.log(err);
		}
	});
});

//취소 버튼

$('#resetBtn').click(function(){
	location.reload();
});